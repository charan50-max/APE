{
  "manifest_version": 3,
  "name": "AI Anti-Phishing Shield",
  "version": "3.0",
  "description": "AI-powered phishing detection for students (CERT-In Calibrated)",

  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "https://mail.google.com/*",
    "http://127.0.0.1:8000/*"
  ],

  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup.html"
  }
}